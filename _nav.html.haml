- if session[:account_diseases].count > 0
	%ul#tablenav.tabmenu.right
		%li{:class => "<!--[if IE]>curvyIgnore<![endif]--> #{"active" if params[:action] == "active" or (params[:action].start_with? 'active' and session[:account_diseases].count == 1)}"}
			= link_to "All Active", active_account_patients_path
		- if session[:account_diseases].count > 1
			- if session[:account_diseases].include? 'DM'
				%li{:class => "<!--[if IE]>curvyIgnore<![endif]--> #{"active" if params[:action] == "active_dm" }"}
					= link_to "Active DM", active_dm_account_patients_path
			- if session[:account_diseases].include? 'CKD'
				%li{:class => "<!--[if IE]>curvyIgnore<![endif]--> #{"active" if params[:action] == "active_ckd" }"}
					= link_to "Active CKD", active_ckd_account_patients_path
		%li{:class => "<!--[if IE]>curvyIgnore<![endif]--> #{"active" if params[:action] == "inactive" }"}
			= link_to "All Inactive", inactive_account_patients_path
		%li{:class => "<!--[if IE]>curvyIgnore<![endif]--> #{"active" if params[:action] == "assigned_not_accepted" }"}
			= link_to "Not Yet Acknowledged", assigned_not_accepted_account_patients_path
		%li{:class => "<!--[if IE]>curvyIgnore<![endif]--> #{"active" if params[:action] == "under_prov_review" }"}
			= link_to "Under Prov Review", under_prov_review_account_patients_path